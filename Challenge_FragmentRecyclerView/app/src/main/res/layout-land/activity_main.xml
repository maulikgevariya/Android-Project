<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layout_land"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/listFrag"
        android:name="com.example.challenge_fragmentrecyclerview.listFrag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_list" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <fragment
            android:id="@+id/buttonFrag"
            android:name="com.example.challenge_fragmentrecyclerview.buttonFrag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            tools:layout="@layout/fragment_button" />

        <fragment
            android:id="@+id/detailFrag"
            android:name="com.example.challenge_fragmentrecyclerview.detailFrag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            tools:layout="@layout/fragment_detail" />

        <fragment
            android:id="@+id/logoFrag"
            android:name="com.example.challenge_fragmentrecyclerview.logoFrag"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            tools:layout="@layout/fragment_logo" />
    </LinearLayout>
</LinearLayout>